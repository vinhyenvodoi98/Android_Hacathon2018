<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.hanh.ava_android.MainActivity">


    <include layout="@layout/content_main"
        android:id="@+id/include" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_destination"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="40dp">

                <AutoCompleteTextView
                    android:id="@+id/edtDesti"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/lato_italic"
                    android:hint="@string/edtplace"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:paddingTop="@dimen/padding_small"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_very_big" />
            <ImageView
                android:id="@+id/imgClearDesti"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clear" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnActionFloat"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_my_location"
        android:layout_alignBottom="@id/tvActionDesti"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"/>
    <TextView
        android:id="@+id/tvActionDesti"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:visibility="visible"
        android:background="@drawable/bg_round_corner_solid_green"
        android:text="@string/actionDesti"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"/>

</RelativeLayout>
